{
  "compilerOptions": {
    "outDir": "./dist",         // Output compiled JS files to "dist"
    "rootDir": "./src",         // Source directory
    "module": "CommonJS",       // Required for Node.js compatibility
    "target": "ES2020",         // Modern ES features
    "strict": true,             // Enable strict type-checking
    "esModuleInterop": true,    // Allow default imports
    "resolveJsonModule": true,  // Allow importing JSON files
    "skipLibCheck": true        // Ignore type issues in dependencies
  },
  "include": ["src"],           // Compile only "src" directory
  "exclude": ["node_modules"]   // Ignore dependencies
}
